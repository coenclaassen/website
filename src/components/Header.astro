---
import { NAVIGATION_LINKS } from '../utils/constants';
import { processNavigationLink } from '../utils/links';
---

<header>
  <button type="button" class="menu-toggle" id="menu-toggle" aria-label="Toggle navigation menu">â˜°</button>
  <div class="desktop-menu" id="desktop-menu">
    <nav>
      {NAVIGATION_LINKS.map((link) => {
        const processed = processNavigationLink(link);
        return (
          <a href={processed.href} class="thin" target={processed.target} rel={processed.rel}>
            {processed.label}
          </a>
        );
      })}
    </nav>
  </div>
  <div class="mobile-menu" id="mobile-menu">
    {NAVIGATION_LINKS.map((link) => {
      const processed = processNavigationLink(link);
      return (
        <a href={processed.href} class="thin" target={processed.target} rel={processed.rel}>
          {processed.label}
        </a>
      );
    })}
  </div>
</header>

<script>
  import { initMenu } from '../utils/menu';
  initMenu();
</script>

