---
import "../styles/global.css";
import { SITE_URL } from "../utils/constants";
import { getUrl } from "../utils/url";

const {
  title = "Coen Claassen",
  description = "Product builder for early and uncertain ideas focused on turning risky concepts into products that ship.",
  image = "https://www.coenclaassen.com/placeholder.png"
} = Astro.props;

const ogImage = image.startsWith("http") ? image : new URL(image, SITE_URL).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Coen Claassen" />
    <meta property="og:url" content={SITE_URL} />
    
    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={getUrl("icons/favicon.svg")} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4LBZMM7JZM"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-4LBZMM7JZM');
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
